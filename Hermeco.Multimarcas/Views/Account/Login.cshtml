<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Offcorss</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row top-navbar">
            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar3">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#"><img src="@Url.Content("~/Content/images/logo.png")" alt="Offcorss"></a>
                    </div>
                    <div id="navbar3" class="navbar-collapse collapse">
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form name="login-form" class="login-form" method="post">
                    <div class="header">
                        <h1>Bienvenido a OFFCORSS</h1>
                        <h4>Por favor, ingrese los datos</h4>
                    </div>
                    <div class="content">
                        @if (ViewBag.Result == true)
                        {
                            <div class="alert alert-danger">
                                @ViewData["Message"]
                            </div>
                        }
                        <input name="UserName" id="UserName" type="text" class="input username" placeholder="Username" />
                        <div class="user-icon"></div>
                        <input name="password" id="password" type="password" class="input password" placeholder="Password" />
                        <div class="pass-icon"></div>
                    </div>
                    <div class="footer">
                        <input type="submit" class="button btn btn-block" value="Iniciar Sesión"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Styles.Render("~/Login/css")
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!--[if lt IE 9]>
    <script src="js/css3-mediaqueries.js"></script>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    
</body>
</html>